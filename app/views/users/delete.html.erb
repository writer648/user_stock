<%= link_to("<< Back to List", users_path, :class => 'back-link') %>

<div class="users delete">
  <h2>Delete User</h2>

  <%= form_for(@user, :url => user_path(@user), :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this user?  That's not a very good Disney type of thing to do</p>

    <p class="reference-name"><%= f.object.first_name %> &nbsp; <%= f.object.last_name %> </p>

    <div class="form-buttons">
      <%= f.submit("Delete User") %>
    </div>

  <% end %>
</div>
